<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PubHub.BookMobile.Views.EBookView"
             xmlns:viewModels="clr-namespace:PubHub.BookMobile.ViewModels"
             x:DataType="viewModels:EBookViewModel">
    <StackLayout Orientation="Vertical"
                 VerticalOptions="StartAndExpand"
                 Spacing="10">

        <ScrollView Orientation="Vertical"
                    HeightRequest="550">
            <WebView>
                <WebView.Source>
                    <HtmlWebViewSource Html="{Binding WebContent}"/>
                </WebView.Source>
            </WebView>
        </ScrollView>
        <Line Stroke="{StaticResource Primary}"/>
        <StackLayout Orientation="Horizontal"
                     HorizontalOptions="Center"
                     Spacing="10">
            <Button Text="&lt;"
                    Command="{Binding GoBackCommand}"/>
            <Button Text=">"
                    Command="{Binding GoNextCommand}"/>
        </StackLayout>
    </StackLayout>
</ContentPage>