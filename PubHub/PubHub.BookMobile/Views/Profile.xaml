<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PubHub.BookMobile.Views.Profile"
             xmlns:models="clr-namespace:PubHub.BookMobile.ViewModels"
             xmlns:views="clr-namespace:PubHub.BookMobile.Views"
             xmlns:auth="clr-namespace:PubHub.BookMobile.Auth"
             x:DataType="models:ProfileViewModel"
             Title="{Binding FullName}">

    <Shell.TitleView>
        <Grid ColumnDefinitions=".5*, .5*"
              Padding="0,0,20,0">
            <Label x:DataType="views:Profile"
                   Grid.Column="0"
                   VerticalTextAlignment="Center"
                   FontSize="{StaticResource Subheader}"
                   FontAttributes="Bold"
                   TextColor="{StaticResource WarmWhite}"
                   Text="{Binding Title}"/>
            <Button Grid.Column="1"
                    Text="Sign in"
                    IsVisible="{Binding IsAuthenticated, Converter={StaticResource InvertedBoolConverter}}"
                    FontAttributes="Bold"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    Command="{Binding NavigateToPageCommand}"
                    CommandParameter="Login"/>
            <Button Grid.Column="1"
                    Text="Sign out"
                    IsVisible="{Binding IsAuthenticated}"
                    FontAttributes="Bold"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    Command="{Binding NavigateToPageCommand}"
                    CommandParameter="Logout"/>
        </Grid>
    </Shell.TitleView>

    <RefreshView IsRefreshing="{Binding IsBusy}"
                 Command="{Binding FecthUserCommand}">
        <StackLayout Orientation="Vertical"
                     VerticalOptions="StartAndExpand">
            <ScrollView VerticalOptions="StartAndExpand"
                        Margin="10,20,10,10">
                <StackLayout Orientation="Vertical">
                    <Label FontSize="{StaticResource Header}"
                           FontAttributes="Bold"
                           Text="Personal Information"/>
                    <StackLayout Orientation="Vertical"
                                 Padding="10,0,10,0"
                                 Spacing="5">
                        <StackLayout Orientation="Horizontal"
                                     Spacing="5"
                                     HeightRequest="40">
                            <Label FontAttributes="Bold"
                                   Text="Name:"
                                   WidthRequest="50"
                                   VerticalOptions="Center"/>
                            <Border IsEnabled="{Binding NotInEditMode, Converter={StaticResource InvertedBoolConverter}}"
                                    HeightRequest="30">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup Name="CommonStates">
                                        <VisualState Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Property="Stroke" Value="{StaticResource Primary}"/>
                                                <Setter Property="StrokeShape" Value="RoundRectangle 5,5"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState Name="Disabled">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="Transparent"/>
                                                <Setter Property="Stroke" Value="Transparent"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <Entry Text="{Binding Name}"
                                       IsEnabled="{Binding NotInEditMode, Converter={StaticResource InvertedBoolConverter}}">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroupList>
                                            <VisualStateGroup Name="CommonStates">
                                                <VisualState Name="Normal">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="Transparent"/>
                                                        <Setter Property="TextColor" Value="{x:StaticResource PrimaryDarkText}"/>
                                                    </VisualState.Setters>
                                                </VisualState>
                                                <VisualState Name="Disabled">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="Transparent"/>
                                                        <Setter Property="TextColor" Value="{x:StaticResource PrimaryDarkText}"/>
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateGroupList>
                                    </VisualStateManager.VisualStateGroups>
                                </Entry>
                            </Border>
                            <Border IsEnabled="{Binding NotInEditMode, Converter={StaticResource InvertedBoolConverter}}"
                                    HeightRequest="30">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup Name="CommonStates">
                                        <VisualState Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Property="Stroke" Value="{StaticResource Primary}"/>
                                                <Setter Property="StrokeShape" Value="RoundRectangle 5,5"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState Name="Disabled">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="Transparent"/>
                                                <Setter Property="Stroke" Value="Transparent"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <Entry Text="{Binding Surname}"
                                       IsEnabled="{Binding NotInEditMode, Converter={StaticResource InvertedBoolConverter}}">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroupList>
                                            <VisualStateGroup Name="CommonStates">
                                                <VisualState Name="Normal">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="Transparent"/>
                                                        <Setter Property="TextColor" Value="{x:StaticResource PrimaryDarkText}"/>
                                                    </VisualState.Setters>
                                                </VisualState>
                                                <VisualState Name="Disabled">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="Transparent"/>
                                                        <Setter Property="TextColor" Value="{x:StaticResource PrimaryDarkText}"/>
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateGroupList>
                                    </VisualStateManager.VisualStateGroups>
                                </Entry>
                            </Border>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal"
                                     Spacing="5"
                                     HeightRequest="40">
                            <Label FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   Text="Email:"
                                   WidthRequest="50"/>
                            <Border IsEnabled="{Binding NotInEditMode, Converter={StaticResource InvertedBoolConverter}}"
                                    HeightRequest="30">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup Name="CommonStates">
                                        <VisualState Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Property="Stroke" Value="{StaticResource Primary}"/>
                                                <Setter Property="StrokeShape" Value="RoundRectangle 5,5"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState Name="Disabled">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="Transparent"/>
                                                <Setter Property="Stroke" Value="Transparent"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <Entry Text="{Binding Email}"
                                       IsEnabled="{Binding NotInEditMode, Converter={StaticResource InvertedBoolConverter}}">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroupList>
                                            <VisualStateGroup Name="CommonStates">
                                                <VisualState Name="Normal">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="Transparent"/>
                                                        <Setter Property="TextColor" Value="{x:StaticResource PrimaryDarkText}"/>
                                                    </VisualState.Setters>
                                                </VisualState>
                                                <VisualState Name="Disabled">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="Transparent"/>
                                                        <Setter Property="TextColor" Value="{x:StaticResource PrimaryDarkText}"/>
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateGroupList>
                                    </VisualStateManager.VisualStateGroups>
                                </Entry>
                            </Border>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal"
                                     Spacing="5">
                            <Button IsVisible="{Binding NotInEditMode, Converter={StaticResource InvertedBoolConverter}}"
                                    Text="Cancel"
                                    WidthRequest="80"
                                    Command="{Binding CancelCommand}"/>
                            <Button IsVisible="{Binding NotInEditMode, Converter={StaticResource InvertedBoolConverter}}"
                                    Text="Save"
                                    WidthRequest="80"
                                    Command="{Binding UpdateCommand}"/>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
            <StackLayout Orientation="Horizontal"
                         Spacing="10"
                         VerticalOptions="EndAndExpand"
                         HorizontalOptions="CenterAndExpand"
                         BackgroundColor="{x:StaticResource Primary}">
                <Button FontFamily="IcoFont"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        Text="{Binding Source={x:StaticResource Edit}, StringFormat='{0} Edit Profile'}"
                        WidthRequest="200"
                        HeightRequest="55"
                        Command="{Binding GoIntoEditModeCommand}"/>
                <Button FontFamily="IcoFont"
                        FontAttributes="Bold"
                        HorizontalOptions="End"
                        Text="{Binding Source={x:StaticResource Library}, StringFormat='{0} Library'}"
                        WidthRequest="200"
                        HeightRequest="55"
                        Command="{Binding NavigateToPageCommand}"
                        CommandParameter="Library"/>
            </StackLayout>
        </StackLayout>
    </RefreshView>
</ContentPage>