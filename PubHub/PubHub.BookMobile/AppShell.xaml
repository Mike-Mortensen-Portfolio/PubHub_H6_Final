<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PubHub.BookMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:PubHub.BookMobile.Pages">

    <FlyoutItem Title="Home">
        <FlyoutItem.FlyoutIcon>
            <FontImageSource FontFamily="IcoFont"
                             Glyph="{StaticResource Home}"/>
        </FlyoutItem.FlyoutIcon>
        <ShellContent ContentTemplate="{DataTemplate pages:Home}"
                          Route="Home"/>
    </FlyoutItem>
    
    <FlyoutItem Title="Search book">
        <FlyoutItem.FlyoutIcon>
            <FontImageSource FontFamily="IcoFont"
                             Glyph="{StaticResource Look}"/>
        </FlyoutItem.FlyoutIcon>
        <ShellContent ContentTemplate="{DataTemplate pages:Library}"
                          Route="Library"/>
    </FlyoutItem>
</Shell>
